<h1><%=@excursion.title%></h1>
<img src=<%= @excursion.image_url%>><br>
<%=@excursion.location%><br><br>
<%=@excursion.description%><br><br>
$<%=@excursion.price%><br><br>
<%=@excursion.included%><br><br>
<%=@excursion.what_to_bring%><br><br>
<%=@excursion.company%><br><br>
<%=@excursion.pick_up%><br><br>
<%=@excursion.drop_off%><br><br>
<%=@excursion.veh_info%><br><br>
All Inclusive: <%=@excursion.all_inclusive%><br><br>


<% if logged_in? && business? %>
    <button><%= button_to "Edit", edit_excursion_path, method: :get%></button>
    <button><%= button_to "Delete", @excursion, method: :delete, data: {confirm: "Are you sure you want to delete #{@excursion.title}"}%></button>
    <% elsif logged_in? && current_user %>
    <%= button_to "Book Excursion", new_excursion_booking_path(@excursion), :method => "get"%>
    <% else %>
    <h5>Please Log In or Sign Up to Book!</h5>
    <%=link_to "Back to Excursions List", excursions_path %>
    <% end %>

 
