<!DOCTYPE html>
<html>
  <head>
    <title>Excursions</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% if logged_in? && business?%>
    <%= link_to "Log Out", logout_path, method: :delete %> |
    <%= link_to "Add New Excursion", new_excursion_path%> |
    <%= link_to "Excursions List", excursions_path%> |
    <%= link_to "#{current_user.name} Excursions List", excursions_path%> |
    <% elsif logged_in? %>
    <%= link_to "Log Out", logout_path, method: :delete %> |
    <%= link_to "Excursions List", excursions_path%> |
    <%= link_to "Your Bookings List", bookings_path%> |
    <% else %>
    <%= link_to "Sign Up", new_user_path%> |
    <%= link_to "Log In", login_path%> |
    <% end %>
    
  <body>
  <% if flash[:message] %>
              <p><i><%= flash[:message] %></i></p>
            <% end %>
    <%= yield %>
  </body>
</html>
